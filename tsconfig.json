{
  "baseUrl": ".",
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "lib",
    "outDir": "dist",
    "allowJs": false,
    "pretty": true,
    "strictNullChecks": true,
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "lib": ["es6"],
  "include": ["lib/**/**.ts", "bin/index.ts"],
  "exclude": ["node_modules", "dist"]
}
